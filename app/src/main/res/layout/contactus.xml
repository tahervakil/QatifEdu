<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.taher.qatifedu.utility.TextViewPlus
        android:id="@+id/textViewPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/viewadv"
        android:textColor="#636260"
        android:textSize="20dp"
        android:textStyle="bold"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toTopOf="parent" />


    <com.taher.qatifedu.utility.TextViewPlus
        android:id="@+id/textViewPlus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:text="@string/ourphone"
        android:textColor="#229954"
        android:textSize="20dp"
        android:textStyle="bold"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus" />


    <com.taher.qatifedu.utility.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/pressnumber"
        android:textColor="#636260"
        android:textSize="12dp"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintBottom_toBottomOf="@+id/textViewPlus2"
        foo:layout_constraintEnd_toStartOf="@+id/textViewPlus2" />


    <Button
        android:id="@+id/btn_phone"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/call_button"
        android:gravity="end|center_vertical"
        android:paddingEnd="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:text="@string/number"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintHorizontal_bias="0.515"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus2" />

    <com.taher.qatifedu.utility.TextViewPlus
        android:id="@+id/textViewPlus3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="@string/website"
        android:textColor="#3498DB"
        android:textSize="20dp"
        android:textStyle="bold"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_phone" />


    <com.taher.qatifedu.utility.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/presswebsite"
        android:textColor="#636260"
        android:textSize="12sp"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintBottom_toBottomOf="@+id/textViewPlus3"
        foo:layout_constraintEnd_toStartOf="@+id/textViewPlus3" />


    <Button
        android:id="@+id/btn_website"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/website_button"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:gravity="start|center_vertical"
        android:text="@string/emailurl"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintHorizontal_bias="0.533"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus3" />

    <com.taher.qatifedu.utility.TextViewPlus
        android:id="@+id/textViewPlus4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/pressicon"
        android:textColor="#636260"
        android:textSize="18dp"
        foo:customFont="advertisingbold.ttf"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_website" />


    <ImageButton
        android:id="@+id/btn_facebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/facebook"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus4" />

    <ImageButton
        android:id="@+id/btn_telegram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/telegram"
        foo:layout_constraintEnd_toStartOf="@+id/btn_snap"
        foo:layout_constraintStart_toEndOf="@+id/btn_facebook"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus4" />

    <ImageButton
        android:id="@+id/btn_snap"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/snapchat"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/textViewPlus4" />

    <ImageButton
        android:id="@+id/btn_twitter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/twitter"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_facebook" />

    <ImageButton
        android:id="@+id/btn_instagram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/instagram"
        foo:layout_constraintEnd_toStartOf="@+id/btn_whatsapp"
        foo:layout_constraintStart_toEndOf="@+id/btn_twitter"
        foo:layout_constraintTop_toBottomOf="@+id/btn_telegram" />

    <ImageButton
        android:id="@+id/btn_whatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/whatsapp"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_snap" />

    <ImageButton
        android:id="@+id/btn_sms"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sms"
        foo:layout_constraintStart_toStartOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_instagram" />

    <ImageButton
        android:id="@+id/btn_email"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/email"
        foo:layout_constraintEnd_toEndOf="parent"
        foo:layout_constraintTop_toBottomOf="@+id/btn_instagram" />


</android.support.constraint.ConstraintLayout>